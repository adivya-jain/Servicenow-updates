        <order>100</order>
        <script><![CDATA[function onClick() {
    var newDate = prompt("Enter new appointment date (yyyy-mm-dd):");

    if (newDate) {
        var ga = new GlideAjax("RescheduleAppointment");
        ga.addParam('sysparm_name', 'rescheduleAppointment');
        ga.addParam('sysparm_sys_id', g_form.getUniqueValue());
        ga.addParam('sysparm_new_date', newDate);

        ga.getXMLAnswer(function(response) {
            var result = response;
            if (result === 'success') {
                alert("Appointment rescheduled successfully.");
                g_form.setValue('appointment_date', newDate);
                g_form.save(); // Optional: Save the form immediately
            } else {
                alert("Failed to reschedule appointment.");
            }
        });
    }
}
]]></script>
